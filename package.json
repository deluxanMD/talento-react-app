{
  "name": "cra-e2e-and-ct",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@cypress/instrument-cra": "^1.4.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "nyc": "^15.1.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.7.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "cypress:run": "npx cypress run --e2e && cypress run --component",
    "cy:open": "cypress open --e2e",
    "cy:run": "cypress run --e2e",
    "ct:open": "cypress open --component",
    "ct:run": "cypress run --component",
    "pretest": "npm ci && rimraf .nyc_output .cache coverage dist",
    "test": "react-scripts test",
    "test:run": "start-test 3000 cy:run",
    "eject": "react-scripts eject",
    "report": "nyc report --reporter=lcov --reporter=text",
    "lint:check": "npx eslint src --ext .js,.jsx,.ts,.tsx  --resolve-plugins-relative-to .eslintrc.json",
    "lint:fix": "npx eslint src --ext .js,.jsx,.ts,.tsx --fix  --resolve-plugins-relative-to .eslintrc.json",
    "prettier:check": "npx prettier --check src",
    "prettier:fix": "npx prettier --write src",
    "coverage:verify": "npx nyc report --check-coverage true --lines 100",
    "coverage:check-files": "check-coverage src/index.tsx && check-coverage src/App.tsx && check-coverage src/components/Button.tsx && check-coverage src/components/Stepper.tsx && only-covered src/index.tsx src/App.tsx src/components/Button.tsx src/components/Stepper.tsx"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}
